rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any user to create their own user document during signup
      allow create: if request.auth.uid == userId;
      // Allow authenticated users to read and update their own data
      allow read, update: if request.auth.uid == userId;
    }

    // Calls can be managed by any authenticated user
    match /calls/{callId} {
      allow read, write: if request.auth.uid != null;
    }

    // Chat messages can be managed by any authenticated user
    match /calls/{callId}/messages/{messageId} {
      allow read, write: if request.auth.uid != null;
    }

    // Reports can be created by authenticated users, but only read by admins
    match /reports/{reportId} {
      allow create: if request.auth.uid != null;
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
