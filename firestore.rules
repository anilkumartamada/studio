rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own data.
    // User documents are created by a server-side function, not by the client.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Calls can be created by any authenticated user.
    // Participants can read/write to the call document.
    match /calls/{callId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null;
    }

    // Reports can only be created by authenticated users.
    // They can only be read by admins.
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
