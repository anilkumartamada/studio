rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow anyone to create their own user document upon signup
      allow create: if request.auth.uid != null;
      // Allow users to read, update, or delete their own document
      allow read, update, delete: if request.auth.uid == userId;
    }

    match /calls/{callId} {
      allow read, write: if request.auth.uid != null;
    }

    match /reports/{reportId} {
        allow create: if request.auth.uid != null;
        // Only admins can read reports
        allow read, write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
